<div class="limiter">
  <div class="container-login100">
    <div class="col-12 ">
      {{#if errors}}
        {{#each errors}}
          <div class="row justify-content-center">
            <div class="alert alert-danger">
             {{this.msg}}
            </div>
          </div>
        {{/each}}
      {{else}}
        {{!-- <div class="login100-pic">
          <img src="assets/img/logo.png" alt="IMG">
        </div> --}}
      {{/if}}

      <div class="row justify-content-center">
        <form class="login100-form validate-form" method="POST" action="/register">
          <span class="login100-form-title">
            {{title}}
          </span>

          <div class="wrap-input100 validate-input">
            <input class="input100" type="text" name="name" placeholder="Name">
            <span class="focus-input100"></span>
            <span class="symbol-input100">
              <i class="fa fa-user" aria-hidden="true"></i>
            </span>
          </div>

          <div class="wrap-input100 validate-input" data-validate="Valid username is required.">
            <input class="input100" type="text" name="username" placeholder="Username">
            <span class="focus-input100"></span>
            <span class="symbol-input100">
              <i class="fa fa-user" aria-hidden="true"></i>
            </span>
          </div>

          <div class="wrap-input100 validate-input" data-validate="Password is required">
            <input class="input100" type="password" name="pass" placeholder="Password">
            <span class="focus-input100"></span>
            <span class="symbol-input100">
              <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
          </div>

          <div class="wrap-input100 validate-input" data-validate="Passwords do not match.">
            <input class="input100" type="password" name="confirmPass" placeholder="Confirm Password">
            <span class="focus-input100"></span>
            <span class="symbol-input100">
              <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
          </div>

          <div class="container-login100-form-btn">
            <button class="login100-form-btn">
              Create Account
            </button>
          </div>

          <div class="text-center pt-5">
            <span class="txt1">
              Already a user? 
            </span>
            <a class="txt2" href="/">
              Log in here.
              <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>